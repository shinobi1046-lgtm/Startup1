{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.adp.create_employee.schema.json",
  "title": "ADP - Create Employee",
  "description": "Create a new employee record",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.adp.create_employee",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "personalInfo": {
          "description": "Employee personal information",
          "type": "object",
          "additionalProperties": true
        },
        "employmentInfo": {
          "description": "Employment details",
          "type": "object",
          "additionalProperties": true
        },
        "compensation": {
          "description": "Compensation details",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "personalInfo",
        "employmentInfo"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR Management"
        },
        "appName": {
          "type": "string",
          "const": "ADP"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "employee_write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}