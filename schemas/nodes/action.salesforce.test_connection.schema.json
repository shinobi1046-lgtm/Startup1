{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.salesforce.test_connection.schema.json",
  "title": "Salesforce - Test Connection",
  "description": "Test the connection to Salesforce and verify authentication",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.salesforce.test_connection",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {},
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "crm"
        },
        "appName": {
          "type": "string",
          "const": "Salesforce"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "api"
          ]
        },
        "rateLimits": {
          "type": "object",
          "properties": {
            "requestsPerSecond": {
              "type": "number"
            },
            "requestsPerMinute": {
              "type": "number"
            },
            "dailyLimit": {
              "type": "number"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}