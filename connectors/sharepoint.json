{
  "id": "sharepoint",
  "name": "SharePoint",
  "description": "Microsoft SharePoint collaboration and document management platform",
  "category": "File Storage",
  "icon": "sharepoint",
  "color": "#0078D4",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize",
      "tokenUrl": "https://login.microsoftonline.com/common/oauth2/v2.0/token",
      "scopes": ["Sites.ReadWrite.All", "Files.ReadWrite.All"]
    }
  },
  "baseUrl": "https://graph.microsoft.com/v1.0",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to SharePoint",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_file",
      "name": "Create File",
      "description": "Create a new file in SharePoint",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "driveId": {
            "type": "string",
            "description": "Drive ID (document library)"
          },
          "folderPath": {
            "type": "string",
            "description": "Folder path (e.g., /Documents/Projects)"
          },
          "fileName": {
            "type": "string",
            "description": "File name with extension"
          },
          "content": {
            "type": "string",
            "description": "File content (base64 encoded for binary files)"
          },
          "conflictBehavior": {
            "type": "string",
            "enum": ["fail", "replace", "rename"],
            "default": "fail",
            "description": "What to do if file already exists"
          }
        },
        "required": ["siteId", "fileName", "content"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_file",
      "name": "Get File",
      "description": "Get file metadata and content from SharePoint",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "driveId": {
            "type": "string",
            "description": "Drive ID"
          },
          "fileId": {
            "type": "string",
            "description": "File ID"
          },
          "filePath": {
            "type": "string",
            "description": "File path (alternative to fileId)"
          },
          "includeContent": {
            "type": "boolean",
            "default": false,
            "description": "Include file content in response"
          }
        },
        "required": ["siteId"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_file",
      "name": "Update File",
      "description": "Update an existing file",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "driveId": {
            "type": "string",
            "description": "Drive ID"
          },
          "fileId": {
            "type": "string",
            "description": "File ID"
          },
          "content": {
            "type": "string",
            "description": "New file content"
          }
        },
        "required": ["siteId", "fileId", "content"],
        "additionalProperties": false
      }
    },
    {
      "id": "delete_file",
      "name": "Delete File",
      "description": "Delete a file from SharePoint",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "driveId": {
            "type": "string",
            "description": "Drive ID"
          },
          "fileId": {
            "type": "string",
            "description": "File ID to delete"
          }
        },
        "required": ["siteId", "fileId"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_files",
      "name": "List Files",
      "description": "List files in a folder",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "driveId": {
            "type": "string",
            "description": "Drive ID"
          },
          "folderId": {
            "type": "string",
            "description": "Folder ID (use 'root' for root folder)"
          },
          "folderPath": {
            "type": "string",
            "description": "Folder path (alternative to folderId)"
          },
          "filter": {
            "type": "string",
            "description": "OData filter expression"
          },
          "orderBy": {
            "type": "string",
            "description": "Order by field"
          },
          "top": {
            "type": "number",
            "minimum": 1,
            "maximum": 999,
            "description": "Number of items to return"
          }
        },
        "required": ["siteId"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_folder",
      "name": "Create Folder",
      "description": "Create a new folder",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "driveId": {
            "type": "string",
            "description": "Drive ID"
          },
          "parentFolderId": {
            "type": "string",
            "description": "Parent folder ID"
          },
          "folderName": {
            "type": "string",
            "description": "Name of the new folder"
          },
          "conflictBehavior": {
            "type": "string",
            "enum": ["fail", "replace", "rename"],
            "default": "fail",
            "description": "What to do if folder already exists"
          }
        },
        "required": ["siteId", "folderName"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_list_item",
      "name": "Create List Item",
      "description": "Create a new item in a SharePoint list",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "listId": {
            "type": "string",
            "description": "List ID"
          },
          "fields": {
            "type": "object",
            "description": "Field values for the new item"
          }
        },
        "required": ["siteId", "listId", "fields"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_list_item",
      "name": "Update List Item",
      "description": "Update an existing list item",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "listId": {
            "type": "string",
            "description": "List ID"
          },
          "itemId": {
            "type": "string",
            "description": "Item ID"
          },
          "fields": {
            "type": "object",
            "description": "Field values to update"
          }
        },
        "required": ["siteId", "listId", "itemId", "fields"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_list_items",
      "name": "Get List Items",
      "description": "Get items from a SharePoint list",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "listId": {
            "type": "string",
            "description": "List ID"
          },
          "filter": {
            "type": "string",
            "description": "OData filter expression"
          },
          "orderBy": {
            "type": "string",
            "description": "Order by field"
          },
          "select": {
            "type": "string",
            "description": "Fields to select"
          },
          "expand": {
            "type": "string",
            "description": "Fields to expand"
          },
          "top": {
            "type": "number",
            "minimum": 1,
            "maximum": 5000,
            "description": "Number of items to return"
          }
        },
        "required": ["siteId", "listId"],
        "additionalProperties": false
      }
    },
    {
      "id": "share_link",
      "name": "Create Sharing Link",
      "description": "Create a sharing link for a file or folder",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "driveId": {
            "type": "string",
            "description": "Drive ID"
          },
          "itemId": {
            "type": "string",
            "description": "File or folder ID"
          },
          "type": {
            "type": "string",
            "enum": ["view", "edit", "embed"],
            "default": "view",
            "description": "Type of sharing link"
          },
          "scope": {
            "type": "string",
            "enum": ["anonymous", "organization", "users"],
            "default": "anonymous",
            "description": "Who can access the link"
          },
          "password": {
            "type": "string",
            "description": "Password for the link"
          },
          "expirationDateTime": {
            "type": "string",
            "format": "date-time",
            "description": "Link expiration date"
          }
        },
        "required": ["siteId", "itemId"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_sites",
      "name": "Get Sites",
      "description": "List SharePoint sites",
      "parameters": {
        "type": "object",
        "properties": {
          "search": {
            "type": "string",
            "description": "Search term for site names"
          },
          "filter": {
            "type": "string",
            "description": "OData filter expression"
          },
          "top": {
            "type": "number",
            "minimum": 1,
            "maximum": 999,
            "description": "Number of sites to return"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_lists",
      "name": "Get Lists",
      "description": "Get SharePoint lists for a site",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "SharePoint site ID"
          },
          "filter": {
            "type": "string",
            "description": "OData filter expression"
          },
          "select": {
            "type": "string",
            "description": "Fields to select"
          }
        },
        "required": ["siteId"],
        "additionalProperties": false
      }
    },
    {
      "id": "search_content",
      "name": "Search Content",
      "description": "Search for content across SharePoint",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "siteId": {
            "type": "string",
            "description": "Limit search to specific site"
          },
          "entityTypes": {
            "type": "array",
            "items": {"type": "string", "enum": ["driveItem", "list", "listItem", "site"]},
            "description": "Types of entities to search"
          },
          "top": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "description": "Number of results to return"
          }
        },
        "required": ["query"],
        "additionalProperties": false
      }
    }
  ],
