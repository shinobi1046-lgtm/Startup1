        "properties": {
          "userId": {
            "type": "string",
            "description": "Filter by user ID"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "event": {"type": "string"},
          "payload": {"type": "object"}
        }
      }
    },
    {
      "id": "recording_completed",
