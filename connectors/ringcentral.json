{
  "id": "ringcentral",
  "name": "RingCentral",
  "description": "Cloud-based communications platform for voice, video, messaging, and contact center solutions",
  "category": "Communication",
  "icon": "ringcentral",
  "color": "#FF8800",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://platform.ringcentral.com/restapi/oauth/authorize",
      "tokenUrl": "https://platform.ringcentral.com/restapi/oauth/token",
      "scopes": ["ReadMessages", "SMS", "InternalMessages", "ReadAccounts", "ReadCallLog", "ReadContacts", "RingOut", "EditCallLog", "Meetings", "ReadCallRecording"]
    }
  },
  "baseUrl": "https://platform.ringcentral.com/restapi/v1.0",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to RingCentral",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "send_sms",
      "name": "Send SMS",
      "description": "Send an SMS message",
      "parameters": {
        "type": "object",
        "properties": {
          "from": {
            "type": "object",
            "properties": {
              "phoneNumber": {"type": "string"}
            },
            "required": ["phoneNumber"],
            "additionalProperties": false
          },
          "to": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "phoneNumber": {"type": "string"}
              },
              "required": ["phoneNumber"],
              "additionalProperties": false
            }
          },
          "text": {
            "type": "string",
            "description": "Message text"
          }
        },
        "required": ["from", "to", "text"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_messages",
      "name": "Get Messages",
      "description": "Get message list",
      "parameters": {
        "type": "object",
        "properties": {
          "messageType": {
            "type": "array",
            "items": {"type": "string", "enum": ["Fax", "SMS", "VoiceMail", "Pager"]},
            "description": "Message types to filter"
          },
          "availability": {
            "type": "array",
            "items": {"type": "string", "enum": ["Alive", "Deleted", "Purged"]},
            "description": "Message availability"
          },
          "conversationId": {
            "type": "string",
            "description": "Conversation ID"
          },
          "dateFrom": {
            "type": "string",
            "format": "date-time",
            "description": "Start date"
          },
          "dateTo": {
            "type": "string",
            "format": "date-time",
            "description": "End date"
          },
          "direction": {
            "type": "array",
            "items": {"type": "string", "enum": ["Inbound", "Outbound"]},
            "description": "Message direction"
          },
          "distinctConversations": {
            "type": "boolean",
            "description": "Whether to return distinct conversations"
          },
          "messageStatus": {
            "type": "array",
            "items": {"type": "string", "enum": ["Queued", "Sent", "Received", "DeliveryFailed", "SendingFailed", "Delivered"]},
            "description": "Message status"
          },
          "readStatus": {
            "type": "array",
            "items": {"type": "string", "enum": ["Read", "Unread"]},
            "description": "Read status"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "perPage": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Messages per page"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_call_log",
      "name": "Get Call Log",
      "description": "Get call log records",
      "parameters": {
        "type": "object",
        "properties": {
          "extensionNumber": {
            "type": "string",
            "description": "Extension number"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Phone number"
          },
          "direction": {
            "type": "array",
            "items": {"type": "string", "enum": ["Inbound", "Outbound"]},
            "description": "Call direction"
          },
          "type": {
            "type": "array",
            "items": {"type": "string", "enum": ["Voice", "Fax"]},
            "description": "Call type"
          },
          "view": {
            "type": "string",
            "enum": ["Simple", "Detailed"],
            "default": "Simple",
            "description": "View type"
          },
          "withRecording": {
            "type": "boolean",
            "description": "Filter by recording availability"
          },
          "recordingType": {
            "type": "string",
            "enum": ["Automatic", "OnDemand"],
            "description": "Recording type"
          },
          "dateFrom": {
            "type": "string",
            "format": "date-time",
            "description": "Start date"
          },
          "dateTo": {
            "type": "string",
            "format": "date-time",
            "description": "End date"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1
          },
          "perPage": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "make_call",
      "name": "Make Call",
      "description": "Make a RingOut call",
      "parameters": {
        "type": "object",
        "properties": {
          "from": {
            "type": "object",
            "properties": {
              "phoneNumber": {"type": "string"},
              "forwardingNumberId": {"type": "string"}
            },
            "additionalProperties": false
          },
          "to": {
            "type": "object",
            "properties": {
              "phoneNumber": {"type": "string"}
            },
            "required": ["phoneNumber"],
            "additionalProperties": false
          },
          "callerId": {
            "type": "object",
            "properties": {
              "phoneNumber": {"type": "string"}
            },
            "additionalProperties": false
          },
          "playPrompt": {
            "type": "boolean",
            "description": "Whether to play prompt"
          },
          "country": {
            "type": "object",
            "properties": {
              "id": {"type": "string"}
            },
            "additionalProperties": false
          }
        },
        "required": ["from", "to"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_meeting",
      "name": "Create Meeting",
      "description": "Create a video meeting",
      "parameters": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "description": "Meeting topic"
          },
          "meetingType": {
            "type": "string",
            "enum": ["Instant", "Scheduled", "ScheduledRecurring", "InstantRecurring"],
            "default": "Scheduled",
            "description": "Meeting type"
          },
          "schedule": {
            "type": "object",
            "properties": {
              "startTime": {"type": "string", "format": "date-time"},
              "durationInMinutes": {"type": "number", "minimum": 1},
              "timeZone": {"type": "object"}
            },
            "additionalProperties": false
          },
          "password": {
            "type": "string",
            "description": "Meeting password"
          },
          "host": {
            "type": "object",
            "properties": {
              "id": {"type": "string"}
            },
            "additionalProperties": false
          },
          "allowJoinBeforeHost": {
            "type": "boolean",
            "description": "Allow join before host"
          },
          "startHostVideo": {
            "type": "boolean",
            "description": "Start with host video"
          },
          "startParticipantsVideo": {
            "type": "boolean",
            "description": "Start with participants video"
          },
          "audioOptions": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Audio options"
          },
          "recurrence": {
            "type": "object",
            "properties": {
              "schedule": {"type": "object"},
              "until": {"type": "string", "format": "date-time"}
            },
            "additionalProperties": false
          }
        },
        "required": ["topic"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_account_info",
      "name": "Get Account Info",
      "description": "Get account information",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_extension_info",
      "name": "Get Extension Info",
      "description": "Get extension information",
      "parameters": {
        "type": "object",
        "properties": {
          "extensionId": {
            "type": "string",
            "description": "Extension ID"
          }
        },
        "required": ["extensionId"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "message_received",
      "name": "Message Received",
      "description": "Triggered when a new message is received",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "messageType": {
            "type": "string",
            "enum": ["SMS", "Fax", "VoiceMail"],
            "description": "Filter by message type"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "uuid": {"type": "string"},
          "event": {"type": "string"},
          "timestamp": {"type": "string"},
          "subscriptionId": {"type": "string"},
          "ownerId": {"type": "string"},
          "body": {
            "type": "object",
            "properties": {
              "extensionId": {"type": "number"},
              "lastUpdated": {"type": "string"},
              "changes": {"type": "array"}
            }
          }
        }
      }
    },
    {
      "id": "call_started",
      "name": "Call Started",
      "description": "Triggered when a call starts",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "extensionId": {
            "type": "string",
            "description": "Filter by extension ID"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "uuid": {"type": "string"},
          "event": {"type": "string"},
          "timestamp": {"type": "string"},
          "body": {"type": "object"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/account/~/extension/~"
  }
}