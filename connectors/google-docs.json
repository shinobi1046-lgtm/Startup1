{
  "id": "google-docs",
  "name": "Google Docs",
  "description": "Google Docs for document creation and collaboration",
  "category": "Productivity",
  "icon": "google-docs",
  "color": "#4285F4",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://accounts.google.com/o/oauth2/v2/auth",
      "tokenUrl": "https://oauth2.googleapis.com/token",
      "scopes": ["https://www.googleapis.com/auth/documents"]
    }
  },
  "baseUrl": "https://docs.googleapis.com/v1",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Google Docs",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_document",
      "name": "Create Document",
      "description": "Create a new Google Doc",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Document title"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_document",
      "name": "Get Document",
      "description": "Get document content",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "includeTabsContent": {
            "type": "boolean",
            "default": false,
            "description": "Include tabs content"
          }
        },
        "required": ["documentId"],
        "additionalProperties": false
      }
    },
    {
      "id": "batch_update",
      "name": "Batch Update",
      "description": "Batch update document with requests",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "requests": {
            "type": "array",
            "items": {"type": "object"},
            "description": "Array of batch update requests"
          },
          "writeControl": {
            "type": "object",
            "properties": {
              "requiredRevisionId": {"type": "string"},
              "targetRevisionId": {"type": "string"}
            },
            "description": "Write control settings"
          }
        },
        "required": ["documentId", "requests"],
        "additionalProperties": false
      }
    },
    {
      "id": "insert_text",
      "name": "Insert Text",
      "description": "Insert text at specified location",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "text": {
            "type": "string",
            "description": "Text to insert"
          },
          "index": {
            "type": "number",
            "default": 1,
            "description": "Character index to insert at"
          },
          "segmentId": {
            "type": "string",
            "description": "Segment ID for tab-specific insertion"
          }
        },
        "required": ["documentId", "text"],
        "additionalProperties": false
      }
    },
    {
      "id": "replace_text",
      "name": "Replace Text",
      "description": "Replace all instances of text",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "replaceText": {
            "type": "string",
            "description": "New text"
          },
          "containsText": {
            "type": "object",
            "properties": {
              "text": {"type": "string"},
              "matchCase": {"type": "boolean", "default": false}
            },
            "description": "Text to find and replace"
          },
          "tabId": {
            "type": "string",
            "description": "Tab ID for tab-specific replacement"
          }
        },
        "required": ["documentId", "replaceText", "containsText"],
        "additionalProperties": false
      }
    },
    {
      "id": "delete_content_range",
      "name": "Delete Content Range",
      "description": "Delete content in specified range",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "range": {
            "type": "object",
            "properties": {
              "startIndex": {"type": "number"},
              "endIndex": {"type": "number"},
              "segmentId": {"type": "string"}
            },
            "description": "Range to delete"
          }
        },
        "required": ["documentId", "range"],
        "additionalProperties": false
      }
    },
    {
      "id": "insert_table",
      "name": "Insert Table",
      "description": "Insert a table into the document",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "rows": {
            "type": "number",
            "minimum": 1,
            "description": "Number of rows"
          },
          "columns": {
            "type": "number",
            "minimum": 1,
            "description": "Number of columns"
          },
          "index": {
            "type": "number",
            "default": 1,
            "description": "Index to insert table at"
          },
          "segmentId": {
            "type": "string",
            "description": "Segment ID for tab-specific insertion"
          }
        },
        "required": ["documentId", "rows", "columns"],
        "additionalProperties": false
      }
    },
    {
      "id": "insert_image",
      "name": "Insert Image",
      "description": "Insert an image into the document",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "uri": {
            "type": "string",
            "format": "uri",
            "description": "Image URI"
          },
          "index": {
            "type": "number",
            "default": 1,
            "description": "Index to insert image at"
          },
          "objectId": {
            "type": "string",
            "description": "Object ID for the image"
          },
          "segmentId": {
            "type": "string",
            "description": "Segment ID for tab-specific insertion"
          }
        },
        "required": ["documentId", "uri"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_text_style",
      "name": "Update Text Style",
      "description": "Update text formatting and style",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Document ID"
          },
          "range": {
            "type": "object",
            "properties": {
              "startIndex": {"type": "number"},
              "endIndex": {"type": "number"},
              "segmentId": {"type": "string"}
            },
            "description": "Range to style"
          },
          "textStyle": {
            "type": "object",
            "properties": {
              "bold": {"type": "boolean"},
              "italic": {"type": "boolean"},
              "underline": {"type": "boolean"},
              "strikethrough": {"type": "boolean"},
              "fontSize": {"type": "object"},
              "foregroundColor": {"type": "object"},
              "backgroundColor": {"type": "object"}
            },
            "description": "Text style properties"
          },
          "fields": {
            "type": "string",
            "description": "Fields to update"
          }
        },
        "required": ["documentId", "range", "textStyle"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "document_created",
      "name": "Document Created",
      "description": "Triggered when a new document is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "documentId": {"type": "string"},
          "title": {"type": "string"},
          "body": {"type": "object"},
          "revisionId": {"type": "string"}
        }
      }
    },
    {
      "id": "document_updated",
      "name": "Document Updated",
      "description": "Triggered when a document is updated",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "Filter by specific document"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "documentId": {"type": "string"},
          "title": {"type": "string"},
          "body": {"type": "object"},
          "revisionId": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/documents/test"
  }
}