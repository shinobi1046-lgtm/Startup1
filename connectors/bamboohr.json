{
  "id": "bamboohr",
  "name": "BambooHR",
  "description": "BambooHR human resources management platform",
  "category": "HR",
  "icon": "bamboo-hr",
  "color": "#79A546",
  "version": "1.0.0",
  "authentication": {
    "type": "api_key",
    "config": {
      "type": "basic",
      "username": "api_key",
      "password": "{api_key}"
    }
  },
  "baseUrl": "https://api.bamboohr.com/api/gateway.php",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to BambooHR",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_employee",
      "name": "Get Employee",
      "description": "Retrieve employee information",
      "parameters": {
        "type": "object",
        "properties": {
          "companyDomain": {
            "type": "string",
            "description": "Company domain"
          },
          "employeeId": {
            "type": "string",
            "description": "Employee ID"
          },
          "fields": {
            "type": "string",
            "description": "Comma-separated list of fields"
          }
        },
        "required": ["companyDomain", "employeeId"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_employee",
      "name": "Create Employee",
      "description": "Create a new employee",
      "parameters": {
        "type": "object",
        "properties": {
          "companyDomain": {
            "type": "string",
            "description": "Company domain"
          },
          "firstName": {
            "type": "string",
            "description": "First name"
          },
          "lastName": {
            "type": "string",
            "description": "Last name"
          },
          "workEmail": {
            "type": "string",
            "format": "email",
            "description": "Work email"
          },
          "hireDate": {
            "type": "string",
            "format": "date",
            "description": "Hire date"
          },
          "department": {
            "type": "string",
            "description": "Department"
          },
          "jobTitle": {
            "type": "string",
            "description": "Job title"
          },
          "supervisor": {
            "type": "string",
            "description": "Supervisor ID"
          }
        },
        "required": ["companyDomain", "firstName", "lastName"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_employee",
      "name": "Update Employee",
      "description": "Update employee information",
      "parameters": {
        "type": "object",
        "properties": {
          "companyDomain": {
            "type": "string",
            "description": "Company domain"
          },
          "employeeId": {
            "type": "string",
            "description": "Employee ID"
          },
          "fields": {
            "type": "object",
            "description": "Fields to update"
          }
        },
        "required": ["companyDomain", "employeeId", "fields"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_time_off_requests",
      "name": "Get Time Off Requests",
      "description": "Retrieve time off requests",
      "parameters": {
        "type": "object",
        "properties": {
          "companyDomain": {
            "type": "string",
            "description": "Company domain"
          },
          "start": {
            "type": "string",
            "format": "date",
            "description": "Start date"
          },
          "end": {
            "type": "string",
            "format": "date",
            "description": "End date"
          },
          "employeeId": {
            "type": "string",
            "description": "Employee ID filter"
          }
        },
        "required": ["companyDomain"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "employee_created",
      "name": "Employee Created",
      "description": "Triggered when a new employee is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "firstName": {"type": "string"},
          "lastName": {"type": "string"},
          "workEmail": {"type": "string"}
        }
      }
    },
    {
      "id": "employee_updated",
      "name": "Employee Updated",
      "description": "Triggered when an employee is updated",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "changes": {"type": "object"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/{companyDomain}/v1/employees/directory"
  }
}