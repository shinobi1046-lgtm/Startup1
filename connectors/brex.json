{
  "id": "brex",
  "name": "Brex",
  "description": "Brex corporate card and expense management platform",
  "category": "Finance",
  "icon": "brex",
  "color": "#6C47FF",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://accounts.brex.com/oauth2/v1/auth",
      "tokenUrl": "https://accounts.brex.com/oauth2/v1/access_token",
      "scopes": ["transactions:read", "cards:read", "users:read"]
    }
  },
  "baseUrl": "https://platform.brexapis.com",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Brex",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "list_transactions",
      "name": "List Transactions",
      "description": "List card transactions",
      "parameters": {
        "type": "object",
        "properties": {
          "card_id": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Filter by card IDs"
          },
          "user_id": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Filter by user IDs"
          },
          "posted_at_start": {
            "type": "string",
            "format": "date-time",
            "description": "Posted after this date"
          },
          "posted_at_end": {
            "type": "string",
            "format": "date-time",
            "description": "Posted before this date"
          },
          "expand": {
            "type": "array",
            "items": {"type": "string", "enum": ["card", "receipt", "merchant"]},
            "description": "Additional data to expand"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 100,
            "description": "Number of transactions to return"
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_transaction",
      "name": "Get Transaction",
      "description": "Get a specific transaction",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Transaction ID"
          },
          "expand": {
            "type": "array",
            "items": {"type": "string", "enum": ["card", "receipt", "merchant"]},
            "description": "Additional data to expand"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_cards",
      "name": "List Cards",
      "description": "List company cards",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Filter by user IDs"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 100,
            "description": "Number of cards to return"
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_card",
      "name": "Get Card",
      "description": "Get card details",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Card ID"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_card",
      "name": "Create Card",
      "description": "Create a new card",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "object",
            "properties": {
              "type": {"type": "string", "enum": ["USER"]},
              "user_id": {"type": "string"}
            },
            "description": "Card owner"
          },
          "card_name": {
            "type": "string",
            "description": "Card nickname"
          },
          "card_type": {
            "type": "string",
            "enum": ["VIRTUAL", "PHYSICAL"],
            "description": "Card type"
          },
          "limit_type": {
            "type": "string",
            "enum": ["CARD", "MONTHLY"],
            "description": "Limit type"
          },
          "spending_controls": {
            "type": "object",
            "properties": {
              "spend_limit": {"type": "object"},
              "locked": {"type": "boolean"}
            },
            "description": "Spending controls"
          },
          "metadata": {
            "type": "object",
            "description": "Card metadata"
          }
        },
        "required": ["owner", "card_type"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_card",
      "name": "Update Card",
      "description": "Update card settings",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Card ID"
          },
          "card_name": {
            "type": "string",
            "description": "Card nickname"
          },
          "spending_controls": {
            "type": "object",
            "properties": {
              "spend_limit": {"type": "object"},
              "locked": {"type": "boolean"}
            },
            "description": "Spending controls"
          },
          "metadata": {
            "type": "object",
            "description": "Card metadata"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_users",
      "name": "List Users",
      "description": "List company users",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 100,
            "description": "Number of users to return"
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "transaction_created",
      "name": "Transaction Created",
      "description": "Triggered when a new transaction is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "card_id": {
            "type": "string",
            "description": "Filter by card"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "card_id": {"type": "string"},
          "amount": {"type": "object"},
          "merchant": {"type": "object"}
        }
      }
    },
    {
      "id": "card_created",
      "name": "Card Created",
      "description": "Triggered when a new card is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "card_name": {"type": "string"},
          "card_type": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/v2/cards"
  }
}