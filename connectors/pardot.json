      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 200,
            "default": 200,
            "description": "Number of campaigns to return"
          },
          "offset": {
            "type": "number",
            "minimum": 0,
            "default": 0,
            "description": "Number of campaigns to skip"
          }
        },
        "required": [],
        "additionalProperties": false
