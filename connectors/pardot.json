{
  "id": "pardot",
  "name": "Pardot",
  "description": "Salesforce Pardot B2B marketing automation platform",
  "category": "Marketing",
  "icon": "pardot",
  "color": "#00A1E0",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://login.salesforce.com/services/oauth2/authorize",
      "tokenUrl": "https://login.salesforce.com/services/oauth2/token",
      "scopes": ["pardot_api"]
    }
  },
  "baseUrl": "https://pi.pardot.com/api",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Pardot",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_prospects",
      "name": "Get Prospects",
      "description": "Get list of prospects",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 200,
            "default": 200,
            "description": "Number of prospects to return"
          },
          "offset": {
            "type": "number",
            "minimum": 0,
            "default": 0,
            "description": "Number of prospects to skip"
          },
          "created_after": {
            "type": "string",
            "format": "date-time",
            "description": "Filter prospects created after this date"
          },
          "created_before": {
            "type": "string",
            "format": "date-time",
            "description": "Filter prospects created before this date"
          },
          "updated_after": {
            "type": "string",
            "format": "date-time",
            "description": "Filter prospects updated after this date"
          },
          "updated_before": {
            "type": "string",
            "format": "date-time",
            "description": "Filter prospects updated before this date"
          },
          "sort_by": {
            "type": "string",
            "enum": ["created_at", "id", "probability", "value"],
            "description": "Sort field"
          },
          "sort_order": {
            "type": "string",
            "enum": ["ascending", "descending"],
            "description": "Sort order"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_prospect",
      "name": "Create Prospect",
      "description": "Create a new prospect",
      "parameters": {
        "type": "object",
