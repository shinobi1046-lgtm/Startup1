          "fax": {
            "type": "string",
            "description": "Fax number"
          },
          "source": {
            "type": "string",
            "description": "Lead source"
          },
          "annual_revenue": {
            "type": "string",
            "description": "Annual revenue"
          },
          "employees": {
            "type": "string",
            "description": "Number of employees"
          },
          "industry": {
            "type": "string",
