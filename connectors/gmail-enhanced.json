{
  "id": "gmail-enhanced",
  "name": "Gmail Enhanced",
  "description": "Enhanced Gmail with advanced email management features",
  "category": "Email",
  "icon": "gmail",
  "color": "#EA4335",
  "version": "2.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://accounts.google.com/o/oauth2/v2/auth",
      "tokenUrl": "https://oauth2.googleapis.com/token",
      "scopes": ["https://www.googleapis.com/auth/gmail.modify", "https://www.googleapis.com/auth/gmail.labels"]
    }
  },
  "baseUrl": "https://gmail.googleapis.com/gmail/v1",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Gmail",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "send_email",
      "name": "Send Email",
      "description": "Send an email message",
      "parameters": {
        "type": "object",
        "properties": {
          "to": {
            "type": "array",
            "items": {"type": "string", "format": "email"},
            "description": "Recipient email addresses"
          },
          "cc": {
            "type": "array",
            "items": {"type": "string", "format": "email"},
            "description": "CC email addresses"
          },
          "bcc": {
            "type": "array",
            "items": {"type": "string", "format": "email"},
            "description": "BCC email addresses"
          },
          "subject": {
            "type": "string",
            "description": "Email subject"
          },
          "body": {
            "type": "string",
            "description": "Email body (HTML or plain text)"
          },
          "attachments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "filename": {"type": "string"},
                "data": {"type": "string"},
                "mimeType": {"type": "string"}
              }
            },
            "description": "Email attachments"
          },
          "replyTo": {
            "type": "string",
            "format": "email",
            "description": "Reply-to address"
          },
          "isHtml": {
            "type": "boolean",
            "default": false,
            "description": "Email body is HTML"
          }
        },
        "required": ["to", "subject", "body"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_message",
      "name": "Get Message",
      "description": "Get a specific email message",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          },
          "id": {
            "type": "string",
            "description": "Message ID"
          },
          "format": {
            "type": "string",
            "enum": ["minimal", "full", "raw", "metadata"],
            "default": "full",
            "description": "Message format"
          },
          "metadataHeaders": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Headers to include when format is metadata"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_messages",
      "name": "List Messages",
      "description": "List email messages",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          },
          "q": {
            "type": "string",
            "description": "Search query"
          },
          "labelIds": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Label IDs to filter by"
          },
          "includeSpamTrash": {
            "type": "boolean",
            "default": false,
            "description": "Include spam and trash"
          },
          "maxResults": {
            "type": "number",
            "minimum": 1,
            "maximum": 500,
            "default": 100,
            "description": "Maximum results to return"
          },
          "pageToken": {
            "type": "string",
            "description": "Page token for pagination"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "modify_message",
      "name": "Modify Message",
      "description": "Modify message labels",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          },
          "id": {
            "type": "string",
            "description": "Message ID"
          },
          "addLabelIds": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Label IDs to add"
          },
          "removeLabelIds": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Label IDs to remove"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    {
      "id": "delete_message",
      "name": "Delete Message",
      "description": "Delete a message permanently",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          },
          "id": {
            "type": "string",
            "description": "Message ID"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_draft",
      "name": "Create Draft",
      "description": "Create a draft email",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          },
          "to": {
            "type": "array",
            "items": {"type": "string", "format": "email"},
            "description": "Recipient email addresses"
          },
          "subject": {
            "type": "string",
            "description": "Email subject"
          },
          "body": {
            "type": "string",
            "description": "Email body"
          }
        },
        "required": ["to", "subject", "body"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_labels",
      "name": "List Labels",
      "description": "List all labels",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_label",
      "name": "Create Label",
      "description": "Create a new label",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          },
          "name": {
            "type": "string",
            "description": "Label name"
          },
          "messageListVisibility": {
            "type": "string",
            "enum": ["show", "hide"],
            "default": "show",
            "description": "Message list visibility"
          },
          "labelListVisibility": {
            "type": "string",
            "enum": ["labelShow", "labelShowIfUnread", "labelHide"],
            "default": "labelShow",
            "description": "Label list visibility"
          },
          "type": {
            "type": "string",
            "enum": ["system", "user"],
            "default": "user",
            "description": "Label type"
          },
          "color": {
            "type": "object",
            "properties": {
              "textColor": {"type": "string"},
              "backgroundColor": {"type": "string"}
            },
            "description": "Label color"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    {
      "id": "search_messages",
      "name": "Search Messages",
      "description": "Advanced message search",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "default": "me",
            "description": "User's email address or 'me'"
          },
          "query": {
            "type": "string",
            "description": "Gmail search query"
          },
          "from": {
            "type": "string",
            "description": "From email address"
          },
          "to": {
            "type": "string",
            "description": "To email address"
          },
          "subject": {
            "type": "string",
            "description": "Subject contains"
          },
          "hasAttachment": {
            "type": "boolean",
            "description": "Has attachment"
          },
          "isUnread": {
            "type": "boolean",
            "description": "Is unread"
          },
          "dateAfter": {
            "type": "string",
            "format": "date",
            "description": "After date (YYYY/MM/DD)"
          },
          "dateBefore": {
            "type": "string",
            "format": "date",
            "description": "Before date (YYYY/MM/DD)"
          },
          "maxResults": {
            "type": "number",
            "minimum": 1,
            "maximum": 500,
            "default": 100,
            "description": "Maximum results"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "new_email",
      "name": "New Email",
      "description": "Triggered when a new email is received",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "labelIds": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Filter by labels"
          },
          "query": {
            "type": "string",
            "description": "Gmail search query filter"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "threadId": {"type": "string"},
          "snippet": {"type": "string"},
          "payload": {"type": "object"}
        }
      }
    },
    {
      "id": "email_starred",
      "name": "Email Starred",
      "description": "Triggered when an email is starred",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "labelIds": {"type": "array"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/users/me/profile"
  }
}