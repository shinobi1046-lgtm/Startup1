  "triggers": [
    {
      "id": "account_created",
      "name": "Account Created",
      "description": "Triggered when a new account is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "industrycode": {
            "type": "number",
            "description": "Filter by industry"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "accountid": {"type": "string"},
          "name": {"type": "string"},
          "createdon": {"type": "string"}
        }
      }
    },
    {
      "id": "lead_created",
      "name": "Lead Created",
