{
  "id": "github-enhanced",
  "name": "GitHub Enhanced",
  "description": "Enhanced GitHub platform with advanced repository management features",
  "category": "Developer Tools",
  "icon": "github",
  "color": "#333333",
  "version": "2.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://github.com/login/oauth/authorize",
      "tokenUrl": "https://github.com/login/oauth/access_token",
      "scopes": ["repo", "user", "admin:org", "admin:repo_hook"]
    }
  },
  "baseUrl": "https://api.github.com",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection", 
      "description": "Test the connection to GitHub",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_issue",
      "name": "Create Issue",
      "description": "Create a new issue in a repository",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string", 
            "description": "Repository name"
          },
          "title": {
            "type": "string",
            "description": "Issue title"
          },
          "body": {
            "type": "string",
            "description": "Issue body"
          },
          "assignees": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Usernames to assign"
          },
          "milestone": {
            "type": "number",
            "description": "Milestone number"
          },
          "labels": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Issue labels"
          }
        },
        "required": ["owner", "repo", "title"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_issue",
      "name": "Update Issue",
      "description": "Update an existing issue",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "issue_number": {
            "type": "number",
            "description": "Issue number"
          },
          "title": {
            "type": "string",
            "description": "Issue title"
          },
          "body": {
            "type": "string",
            "description": "Issue body"
          },
          "state": {
            "type": "string",
            "enum": ["open", "closed"],
            "description": "Issue state"
          },
          "assignees": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Usernames to assign"
          },
          "labels": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Issue labels"
          }
        },
        "required": ["owner", "repo", "issue_number"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_pull_request",
      "name": "Create Pull Request",
      "description": "Create a new pull request",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "title": {
            "type": "string",
            "description": "Pull request title"
          },
          "head": {
            "type": "string",
            "description": "Source branch"
          },
          "base": {
            "type": "string",
            "description": "Target branch"
          },
          "body": {
            "type": "string",
            "description": "Pull request body"
          },
          "draft": {
            "type": "boolean",
            "default": false,
            "description": "Create as draft"
          },
          "maintainer_can_modify": {
            "type": "boolean",
            "default": true,
            "description": "Allow maintainer edits"
          }
        },
        "required": ["owner", "repo", "title", "head", "base"],
        "additionalProperties": false
      }
    },
    {
      "id": "merge_pull_request",
      "name": "Merge Pull Request",
      "description": "Merge a pull request",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "pull_number": {
            "type": "number",
            "description": "Pull request number"
          },
          "commit_title": {
            "type": "string",
            "description": "Merge commit title"
          },
          "commit_message": {
            "type": "string",
            "description": "Merge commit message"
          },
          "merge_method": {
            "type": "string",
            "enum": ["merge", "squash", "rebase"],
            "default": "merge",
            "description": "Merge method"
          }
        },
        "required": ["owner", "repo", "pull_number"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_repository",
      "name": "Create Repository",
      "description": "Create a new repository",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Repository name"
          },
          "description": {
            "type": "string",
            "description": "Repository description"
          },
          "homepage": {
            "type": "string",
            "format": "uri",
            "description": "Homepage URL"
          },
          "private": {
            "type": "boolean",
            "default": false,
            "description": "Private repository"
          },
          "has_issues": {
            "type": "boolean",
            "default": true,
            "description": "Enable issues"
          },
          "has_projects": {
            "type": "boolean",
            "default": true,
            "description": "Enable projects"
          },
          "has_wiki": {
            "type": "boolean",
            "default": true,
            "description": "Enable wiki"
          },
          "has_downloads": {
            "type": "boolean",
            "default": true,
            "description": "Enable downloads"
          },
          "is_template": {
            "type": "boolean",
            "default": false,
            "description": "Template repository"
          },
          "team_id": {
            "type": "number",
            "description": "Team with admin permissions"
          },
          "auto_init": {
            "type": "boolean",
            "default": false,
            "description": "Auto-initialize with README"
          },
          "gitignore_template": {
            "type": "string",
            "description": "Gitignore template"
          },
          "license_template": {
            "type": "string",
            "description": "License template"
          },
          "allow_squash_merge": {
            "type": "boolean",
            "default": true,
            "description": "Allow squash merging"
          },
          "allow_merge_commit": {
            "type": "boolean",
            "default": true,
            "description": "Allow merge commits"
          },
          "allow_rebase_merge": {
            "type": "boolean",
            "default": true,
            "description": "Allow rebase merging"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_webhook",
      "name": "Create Webhook",
      "description": "Create a repository webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "name": {
            "type": "string",
            "default": "web",
            "description": "Webhook name"
          },
          "config": {
            "type": "object",
            "properties": {
              "url": {"type": "string", "format": "uri"},
              "content_type": {"type": "string", "enum": ["json", "form"]},
              "secret": {"type": "string"},
              "insecure_ssl": {"type": "string", "enum": ["0", "1"]}
            },
            "description": "Webhook configuration"
          },
          "events": {
            "type": "array",
            "items": {"type": "string"},
            "default": ["push"],
            "description": "Events to trigger webhook"
          },
          "active": {
            "type": "boolean",
            "default": true,
            "description": "Webhook active status"
          }
        },
        "required": ["owner", "repo", "config"],
        "additionalProperties": false
      }
    },
    {
      "id": "search_repositories",
      "name": "Search Repositories",
      "description": "Search for repositories",
      "parameters": {
        "type": "object",
        "properties": {
          "q": {
            "type": "string",
            "description": "Search query"
          },
          "sort": {
            "type": "string",
            "enum": ["stars", "forks", "help-wanted-issues", "updated"],
            "description": "Sort field"
          },
          "order": {
            "type": "string",
            "enum": ["desc", "asc"],
            "default": "desc",
            "description": "Sort order"
          },
          "per_page": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 30,
            "description": "Results per page"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          }
        },
        "required": ["q"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "push",
      "name": "Push",
      "description": "Triggered when code is pushed to repository",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "repository": {
            "type": "string",
            "description": "Filter by repository"
          },
          "branch": {
            "type": "string",
            "description": "Filter by branch"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "ref": {"type": "string"},
          "repository": {"type": "object"},
          "commits": {"type": "array"},
          "pusher": {"type": "object"}
        }
      }
    },
    {
      "id": "pull_request",
      "name": "Pull Request",
      "description": "Triggered on pull request events",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["opened", "closed", "reopened", "synchronize"],
            "description": "Filter by action"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "action": {"type": "string"},
          "number": {"type": "number"},
          "pull_request": {"type": "object"},
          "repository": {"type": "object"}
        }
      }
    },
    {
      "id": "issues",
      "name": "Issues",
      "description": "Triggered on issue events",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["opened", "closed", "reopened", "assigned", "unassigned"],
            "description": "Filter by action"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "action": {"type": "string"},
          "issue": {"type": "object"},
          "repository": {"type": "object"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/user"
  }
}