{
  "id": "google-forms",
  "name": "Google Forms",
  "description": "Google Forms for survey and form creation",
  "category": "Productivity",
  "icon": "google-forms",
  "color": "#673AB7",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://accounts.google.com/o/oauth2/v2/auth",
      "tokenUrl": "https://oauth2.googleapis.com/token",
      "scopes": ["https://www.googleapis.com/auth/forms", "https://www.googleapis.com/auth/forms.responses.readonly"]
    }
  },
  "baseUrl": "https://forms.googleapis.com/v1",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Google Forms",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_form",
      "name": "Create Form",
      "description": "Create a new Google Form",
      "parameters": {
        "type": "object",
        "properties": {
          "info": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "description": {"type": "string"},
              "documentTitle": {"type": "string"}
            },
            "description": "Form information"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_form",
      "name": "Get Form",
      "description": "Get form details and questions",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          }
        },
        "required": ["formId"],
        "additionalProperties": false
      }
    },
    {
      "id": "batch_update",
      "name": "Batch Update Form",
      "description": "Batch update form with requests",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          },
          "requests": {
            "type": "array",
            "items": {"type": "object"},
            "description": "Array of batch update requests"
          },
          "includeFormInResponse": {
            "type": "boolean",
            "default": false,
            "description": "Include updated form in response"
          },
          "writeControl": {
            "type": "object",
            "properties": {
              "requiredRevisionId": {"type": "string"},
              "targetRevisionId": {"type": "string"}
            },
            "description": "Write control settings"
          }
        },
        "required": ["formId", "requests"],
        "additionalProperties": false
      }
    },
    {
      "id": "add_question",
      "name": "Add Question",
      "description": "Add a question to the form",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          },
          "item": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "description": {"type": "string"},
              "questionItem": {
                "type": "object",
                "properties": {
                  "question": {
                    "type": "object",
                    "properties": {
                      "questionId": {"type": "string"},
                      "required": {"type": "boolean"},
                      "choiceQuestion": {"type": "object"},
                      "textQuestion": {"type": "object"},
                      "scaleQuestion": {"type": "object"}
                    }
                  }
                }
              }
            },
            "description": "Question item to add"
          },
          "location": {
            "type": "object",
            "properties": {
              "index": {"type": "number"}
            },
            "description": "Location to insert question"
          }
        },
        "required": ["formId", "item"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_form_info",
      "name": "Update Form Info",
      "description": "Update form title and description",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          },
          "info": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "description": {"type": "string"},
              "documentTitle": {"type": "string"}
            },
            "description": "Updated form information"
          },
          "updateMask": {
            "type": "string",
            "description": "Fields to update"
          }
        },
        "required": ["formId", "info"],
        "additionalProperties": false
      }
    },
    {
      "id": "delete_item",
      "name": "Delete Item",
      "description": "Delete an item from the form",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          },
          "location": {
            "type": "object",
            "properties": {
              "index": {"type": "number"}
            },
            "description": "Location of item to delete"
          }
        },
        "required": ["formId", "location"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_responses",
      "name": "List Responses",
      "description": "List form responses",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          },
          "filter": {
            "type": "string",
            "description": "Response filter"
          },
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 5000,
            "default": 200,
            "description": "Number of responses to return"
          },
          "pageToken": {
            "type": "string",
            "description": "Page token for pagination"
          }
        },
        "required": ["formId"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_response",
      "name": "Get Response",
      "description": "Get a specific form response",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          },
          "responseId": {
            "type": "string",
            "description": "Response ID"
          }
        },
        "required": ["formId", "responseId"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_settings",
      "name": "Update Settings",
      "description": "Update form settings",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Form ID"
          },
          "settings": {
            "type": "object",
            "properties": {
              "quizSettings": {"type": "object"},
              "submitSettings": {"type": "object"}
            },
            "description": "Form settings"
          },
          "updateMask": {
            "type": "string",
            "description": "Fields to update"
          }
        },
        "required": ["formId", "settings"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "form_response",
      "name": "Form Response",
      "description": "Triggered when a new response is submitted",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "formId": {
            "type": "string",
            "description": "Filter by specific form"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "formId": {"type": "string"},
          "responseId": {"type": "string"},
          "answers": {"type": "object"},
          "createTime": {"type": "string"},
          "lastSubmittedTime": {"type": "string"}
        }
      }
    },
    {
      "id": "form_created",
      "name": "Form Created",
      "description": "Triggered when a new form is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "formId": {"type": "string"},
          "info": {"type": "object"},
          "revisionId": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/forms"
  }
}