{
  "id": "box",
  "name": "Box",
  "description": "Box cloud storage and collaboration platform",
  "category": "Storage",
  "icon": "box",
  "color": "#0061D5",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://account.box.com/api/oauth2/authorize",
      "tokenUrl": "https://api.box.com/oauth2/token",
      "scopes": ["root_readwrite", "root_readonly"]
    }
  },
  "baseUrl": "https://api.box.com/2.0",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Box",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "upload_file",
      "name": "Upload File",
      "description": "Upload a file to Box",
      "parameters": {
        "type": "object",
        "properties": {
          "parent_id": {
            "type": "string",
            "default": "0",
            "description": "Parent folder ID (0 for root)"
          },
          "file_name": {
            "type": "string",
            "description": "File name"
          },
          "file_content": {
            "type": "string",
            "description": "File content or URL"
          },
          "content_created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Content creation date"
          },
          "content_modified_at": {
            "type": "string",
            "format": "date-time",
            "description": "Content modification date"
          }
        },
        "required": ["file_name", "file_content"],
        "additionalProperties": false
      }
    },
    {
      "id": "download_file",
      "name": "Download File",
      "description": "Download a file from Box",
      "parameters": {
        "type": "object",
        "properties": {
          "file_id": {
            "type": "string",
            "description": "File ID"
          },
          "version": {
            "type": "string",
            "description": "File version"
          }
        },
        "required": ["file_id"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_folder",
      "name": "Create Folder",
      "description": "Create a new folder",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Folder name"
          },
          "parent_id": {
            "type": "string",
            "default": "0",
            "description": "Parent folder ID"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_file_info",
      "name": "Get File Info",
      "description": "Get file information",
      "parameters": {
        "type": "object",
        "properties": {
          "file_id": {
            "type": "string",
            "description": "File ID"
          },
          "fields": {
            "type": "string",
            "description": "Comma-separated list of fields"
          }
        },
        "required": ["file_id"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_folder_items",
      "name": "List Folder Items",
      "description": "List items in a folder",
      "parameters": {
        "type": "object",
        "properties": {
          "folder_id": {
            "type": "string",
            "default": "0",
            "description": "Folder ID"
          },
          "fields": {
            "type": "string",
            "description": "Comma-separated list of fields"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of items to return"
          },
          "offset": {
            "type": "number",
            "description": "Starting point for pagination"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "search",
      "name": "Search",
      "description": "Search for files and folders",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "file_extensions": {
            "type": "array",
            "items": {"type": "string"},
            "description": "File extensions to filter"
          },
          "type": {
            "type": "string",
            "enum": ["file", "folder"],
            "description": "Item type filter"
          },
          "content_types": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Content types to filter"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 200,
            "default": 30,
            "description": "Number of results"
          }
        },
        "required": ["query"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_shared_link",
      "name": "Create Shared Link",
      "description": "Create a shared link for a file or folder",
      "parameters": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "string",
            "description": "File or folder ID"
          },
          "item_type": {
            "type": "string",
            "enum": ["file", "folder"],
            "description": "Item type"
          },
          "access": {
            "type": "string",
            "enum": ["open", "company", "collaborators"],
            "description": "Access level"
          },
          "password": {
            "type": "string",
            "description": "Password protection"
          },
          "unshared_at": {
            "type": "string",
            "format": "date-time",
            "description": "Expiration date"
          },
          "can_download": {
            "type": "boolean",
            "description": "Allow downloads"
          },
          "can_preview": {
            "type": "boolean",
            "description": "Allow previews"
          }
        },
        "required": ["item_id", "item_type"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "file_uploaded",
      "name": "File Uploaded",
      "description": "Triggered when a file is uploaded",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "folder_id": {
            "type": "string",
            "description": "Filter by folder"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "type": {"type": "string"},
          "id": {"type": "string"},
          "name": {"type": "string"},
          "created_by": {"type": "object"}
        }
      }
    },
    {
      "id": "file_deleted",
      "name": "File Deleted",
      "description": "Triggered when a file is deleted",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "type": {"type": "string"},
          "id": {"type": "string"},
          "name": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/users/me"
  }
}