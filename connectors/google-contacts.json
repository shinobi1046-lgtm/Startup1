{
  "id": "google-contacts",
  "name": "Google Contacts",
  "description": "Google Contacts for managing people and contact information",
  "category": "CRM",
  "icon": "google-contacts",
  "color": "#4285F4",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://accounts.google.com/o/oauth2/v2/auth",
      "tokenUrl": "https://oauth2.googleapis.com/token",
      "scopes": ["https://www.googleapis.com/auth/contacts"]
    }
  },
  "baseUrl": "https://people.googleapis.com/v1",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Google Contacts",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_contact",
      "name": "Create Contact",
      "description": "Create a new contact",
      "parameters": {
        "type": "object",
        "properties": {
          "names": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "givenName": {"type": "string"},
                "familyName": {"type": "string"},
                "displayName": {"type": "string"}
              }
            },
            "description": "Contact names"
          },
          "emailAddresses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {"type": "string", "format": "email"},
                "type": {"type": "string"}
              }
            },
            "description": "Email addresses"
          },
          "phoneNumbers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "type": {"type": "string"}
              }
            },
            "description": "Phone numbers"
          },
          "addresses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "formattedValue": {"type": "string"},
                "type": {"type": "string"},
                "streetAddress": {"type": "string"},
                "city": {"type": "string"},
                "region": {"type": "string"},
                "postalCode": {"type": "string"},
                "country": {"type": "string"}
              }
            },
            "description": "Addresses"
          },
          "organizations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "title": {"type": "string"},
                "department": {"type": "string"}
              }
            },
            "description": "Organizations"
          },
          "biographies": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {"type": "string"}
              }
            },
            "description": "Biography"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_contact",
      "name": "Get Contact",
      "description": "Get a specific contact",
      "parameters": {
        "type": "object",
        "properties": {
          "resourceName": {
            "type": "string",
            "description": "Contact resource name"
          },
          "personFields": {
            "type": "string",
            "default": "names,emailAddresses,phoneNumbers",
            "description": "Fields to include"
          }
        },
        "required": ["resourceName"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_contact",
      "name": "Update Contact",
      "description": "Update an existing contact",
      "parameters": {
        "type": "object",
        "properties": {
          "resourceName": {
            "type": "string",
            "description": "Contact resource name"
          },
          "updatePersonFields": {
            "type": "string",
            "description": "Fields to update"
          },
          "names": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "givenName": {"type": "string"},
                "familyName": {"type": "string"},
                "displayName": {"type": "string"}
              }
            },
            "description": "Updated names"
          },
          "emailAddresses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {"type": "string", "format": "email"},
                "type": {"type": "string"}
              }
            },
            "description": "Updated email addresses"
          },
          "phoneNumbers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "type": {"type": "string"}
              }
            },
            "description": "Updated phone numbers"
          }
        },
        "required": ["resourceName"],
        "additionalProperties": false
      }
    },
    {
      "id": "delete_contact",
      "name": "Delete Contact",
      "description": "Delete a contact",
      "parameters": {
        "type": "object",
        "properties": {
          "resourceName": {
            "type": "string",
            "description": "Contact resource name"
          }
        },
        "required": ["resourceName"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_contacts",
      "name": "List Contacts",
      "description": "List contacts",
      "parameters": {
        "type": "object",
        "properties": {
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of contacts to return"
          },
          "pageToken": {
            "type": "string",
            "description": "Page token for pagination"
          },
          "personFields": {
            "type": "string",
            "default": "names,emailAddresses,phoneNumbers",
            "description": "Fields to include"
          },
          "sortOrder": {
            "type": "string",
            "enum": ["LAST_MODIFIED_ASCENDING", "LAST_MODIFIED_DESCENDING", "FIRST_NAME_ASCENDING", "LAST_NAME_ASCENDING"],
            "description": "Sort order"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "search_contacts",
      "name": "Search Contacts",
      "description": "Search contacts",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 30,
            "default": 10,
            "description": "Number of contacts to return"
          },
          "readMask": {
            "type": "string",
            "default": "names,emailAddresses,phoneNumbers",
            "description": "Fields to include"
          }
        },
        "required": ["query"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_contact_group",
      "name": "Create Contact Group",
      "description": "Create a new contact group",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Group name"
          },
          "readGroupFields": {
            "type": "string",
            "default": "name,memberCount",
            "description": "Fields to return"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    {
      "id": "list_contact_groups",
      "name": "List Contact Groups",
      "description": "List contact groups",
      "parameters": {
        "type": "object",
        "properties": {
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 30,
            "description": "Number of groups to return"
          },
          "pageToken": {
            "type": "string",
            "description": "Page token for pagination"
          },
          "groupFields": {
            "type": "string",
            "default": "name,memberCount",
            "description": "Fields to include"
          },
          "syncToken": {
            "type": "string",
            "description": "Sync token for incremental updates"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "contact_created",
      "name": "Contact Created",
      "description": "Triggered when a new contact is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "resourceName": {"type": "string"},
          "names": {"type": "array"},
          "emailAddresses": {"type": "array"},
          "phoneNumbers": {"type": "array"}
        }
      }
    },
    {
      "id": "contact_updated",
      "name": "Contact Updated",
      "description": "Triggered when a contact is updated",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "resourceName": {"type": "string"},
          "names": {"type": "array"},
          "emailAddresses": {"type": "array"},
          "phoneNumbers": {"type": "array"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/people/me?personFields=names"
  }
}