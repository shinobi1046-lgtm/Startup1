{
  "id": "monday-enhanced",
  "name": "Monday.com Enhanced",
  "description": "Enhanced Monday.com work operating system with advanced project management features",
  "category": "Project Management",
  "icon": "monday",
  "color": "#FF3D57",
  "version": "2.0.0",
  "authentication": {
    "type": "api_key",
    "config": {
      "apiKeyLocation": "header",
      "apiKeyName": "Authorization",
      "apiKeyPrefix": "Bearer"
    }
  },
  "baseUrl": "https://api.monday.com/v2",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Monday.com",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_boards",
      "name": "Get Boards",
      "description": "Get list of boards",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 25,
            "description": "Number of boards to return"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "ids": {
            "type": "array",
            "items": {"type": "number"},
            "description": "Specific board IDs to retrieve"
          },
          "board_kind": {
            "type": "string",
            "enum": ["public", "private", "share"],
            "description": "Filter by board kind"
          },
          "state": {
            "type": "string",
            "enum": ["active", "archived", "deleted"],
            "default": "active",
            "description": "Filter by board state"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_board",
      "name": "Create Board",
      "description": "Create a new board",
      "parameters": {
        "type": "object",
        "properties": {
          "board_name": {
            "type": "string",
            "description": "Board name"
          },
          "board_kind": {
            "type": "string",
            "enum": ["public", "private", "share"],
            "default": "public",
            "description": "Board visibility"
          },
          "description": {
            "type": "string",
            "description": "Board description"
          },
          "folder_id": {
            "type": "number",
            "description": "Folder ID to place board in"
          },
          "workspace_id": {
            "type": "number",
            "description": "Workspace ID"
          },
          "template_id": {
            "type": "number",
            "description": "Template ID to create board from"
          }
        },
        "required": ["board_name"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_items",
      "name": "Get Items",
      "description": "Get items from a board",
      "parameters": {
        "type": "object",
        "properties": {
          "board_id": {
            "type": "number",
            "description": "Board ID"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 25,
            "description": "Number of items to return"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "ids": {
            "type": "array",
            "items": {"type": "number"},
            "description": "Specific item IDs to retrieve"
          },
          "newest_first": {
            "type": "boolean",
            "default": false,
            "description": "Sort by newest first"
          }
        },
        "required": ["board_id"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_item",
      "name": "Create Item",
      "description": "Create a new item",
      "parameters": {
        "type": "object",
        "properties": {
          "board_id": {
            "type": "number",
            "description": "Board ID"
          },
          "item_name": {
            "type": "string",
            "description": "Item name"
          },
          "group_id": {
            "type": "string",
            "description": "Group ID to add item to"
          },
          "column_values": {
            "type": "string",
            "description": "JSON string of column values"
          },
          "create_labels_if_missing": {
            "type": "boolean",
            "default": false,
            "description": "Create status labels if they don't exist"
          }
        },
        "required": ["board_id", "item_name"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_item",
      "name": "Update Item",
      "description": "Update an existing item",
      "parameters": {
        "type": "object",
        "properties": {
          "board_id": {
            "type": "number",
            "description": "Board ID"
          },
          "item_id": {
            "type": "number",
            "description": "Item ID"
          },
          "column_values": {
            "type": "string",
            "description": "JSON string of column values to update"
          },
          "create_labels_if_missing": {
            "type": "boolean",
            "default": false,
            "description": "Create status labels if they don't exist"
          }
        },
        "required": ["board_id", "item_id", "column_values"],
        "additionalProperties": false
      }
    },
    {
      "id": "delete_item",
      "name": "Delete Item",
      "description": "Delete an item",
      "parameters": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "number",
            "description": "Item ID"
          }
        },
        "required": ["item_id"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_update",
      "name": "Create Update",
      "description": "Create an update for an item",
      "parameters": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "number",
            "description": "Item ID"
          },
          "body": {
            "type": "string",
            "description": "Update content"
          }
        },
        "required": ["item_id", "body"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_users",
      "name": "Get Users",
      "description": "Get users in the account",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 25,
            "description": "Number of users to return"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "ids": {
            "type": "array",
            "items": {"type": "number"},
            "description": "Specific user IDs to retrieve"
          },
          "kind": {
            "type": "string",
            "enum": ["all", "non_guests", "guests", "non_pending"],
            "default": "all",
            "description": "Filter by user kind"
          },
          "newest_first": {
            "type": "boolean",
            "default": false,
            "description": "Sort by newest first"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_workspaces",
      "name": "Get Workspaces",
      "description": "Get workspaces",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 25,
            "description": "Number of workspaces to return"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "ids": {
            "type": "array",
            "items": {"type": "number"},
            "description": "Specific workspace IDs to retrieve"
          },
          "state": {
            "type": "string",
            "enum": ["active", "archived", "deleted"],
            "default": "active",
            "description": "Filter by workspace state"
          },
          "kind": {
            "type": "string",
            "enum": ["open", "closed"],
            "description": "Filter by workspace kind"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_webhook",
      "name": "Create Webhook",
      "description": "Create a webhook subscription",
      "parameters": {
        "type": "object",
        "properties": {
          "board_id": {
            "type": "number",
            "description": "Board ID to subscribe to"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Webhook URL"
          },
          "event": {
            "type": "string",
            "enum": ["create_item", "change_column_value", "change_status_column_value", "change_name", "create_update", "edit_update"],
            "description": "Event to subscribe to"
          },
          "config": {
            "type": "string",
            "description": "JSON configuration string"
          }
        },
        "required": ["board_id", "url", "event"],
        "additionalProperties": false
      }
    },
    {
      "id": "execute_graphql",
      "name": "Execute GraphQL Query",
      "description": "Execute a custom GraphQL query",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "GraphQL query string"
          },
          "variables": {
            "type": "object",
            "description": "GraphQL variables"
          }
        },
        "required": ["query"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "item_created",
      "name": "Item Created",
      "description": "Triggered when a new item is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "board_id": {
            "type": "number",
            "description": "Filter by board ID"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "number"},
          "name": {"type": "string"},
          "board": {"type": "object"},
          "group": {"type": "object"},
          "column_values": {"type": "array"},
          "created_at": {"type": "string"},
          "creator": {"type": "object"}
        }
      }
    },
    {
      "id": "column_value_changed",
      "name": "Column Value Changed",
      "description": "Triggered when a column value changes",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "board_id": {
            "type": "number",
            "description": "Filter by board ID"
          },
          "column_id": {
            "type": "string",
            "description": "Filter by column ID"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "item_id": {"type": "number"},
          "item_name": {"type": "string"},
          "column_id": {"type": "string"},
          "column_title": {"type": "string"},
          "previous_value": {"type": "object"},
          "value": {"type": "object"},
          "changed_at": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "POST",
    "endpoint": "/",
    "body": {
      "query": "query { me { id name email } }"
    }
  }
}