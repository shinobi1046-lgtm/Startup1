          },
          "projectSlug": {
            "type": "string",
            "description": "Filter by project slug"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "status": {"type": "string"},
          "statusDetails": {"type": "object"},
          "resolution": {"type": "string"},
          "resolvedAt": {"type": "string"},
          "project": {"type": "object"}
        }
      }
    },
    {
      "id": "error_event",
      "name": "Error Event",
