{
  "id": "servicenow",
  "name": "ServiceNow",
  "description": "ServiceNow cloud-based IT service management platform",
  "category": "IT Service Management",
  "icon": "servicenow",
  "color": "#80CD28",
  "version": "1.0.0",
  "authentication": {
    "type": "basic",
    "config": {
      "usernameField": "username",
      "passwordField": "password"
    }
  },
  "baseUrl": "https://your-instance.service-now.com/api/now",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to ServiceNow",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_incident",
      "name": "Create Incident",
      "description": "Create a new incident",
      "parameters": {
        "type": "object",
        "properties": {
          "short_description": {
            "type": "string",
            "description": "Short description of the incident"
          },
          "description": {
            "type": "string",
            "description": "Detailed description"
          },
          "caller_id": {
            "type": "string",
            "description": "Caller user ID"
          },
          "category": {
            "type": "string",
            "description": "Incident category"
          },
          "subcategory": {
            "type": "string",
            "description": "Incident subcategory"
          },
          "urgency": {
            "type": "string",
            "enum": ["1", "2", "3"],
            "description": "Urgency level (1=High, 2=Medium, 3=Low)"
          },
          "impact": {
            "type": "string",
            "enum": ["1", "2", "3"],
            "description": "Impact level (1=High, 2=Medium, 3=Low)"
          },
          "priority": {
            "type": "string",
            "enum": ["1", "2", "3", "4", "5"],
            "description": "Priority level"
          },
          "assignment_group": {
            "type": "string",
            "description": "Assignment group"
          },
          "assigned_to": {
            "type": "string",
            "description": "Assigned user"
          },
          "location": {
            "type": "string",
            "description": "Location"
          },
          "configuration_item": {
            "type": "string",
            "description": "Configuration item"
          }
        },
        "required": ["short_description"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_incidents",
      "name": "Get Incidents",
      "description": "Get list of incidents",
      "parameters": {
        "type": "object",
        "properties": {
          "sysparm_query": {
            "type": "string",
            "description": "Query filter"
          },
          "sysparm_limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 10000,
            "default": 100,
            "description": "Maximum number of records"
          },
          "sysparm_offset": {
            "type": "number",
            "minimum": 0,
            "default": 0,
            "description": "Number of records to skip"
          },
          "sysparm_fields": {
            "type": "string",
            "description": "Comma-separated list of fields to return"
          },
          "sysparm_display_value": {
            "type": "string",
            "enum": ["true", "false", "all"],
            "default": "false",
            "description": "Return display values"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "update_incident",
      "name": "Update Incident",
      "description": "Update an existing incident",
      "parameters": {
        "type": "object",
        "properties": {
          "sys_id": {
            "type": "string",
            "description": "Incident sys_id"
          },
          "short_description": {
            "type": "string",
            "description": "Short description"
          },
          "description": {
            "type": "string",
            "description": "Detailed description"
          },
          "state": {
            "type": "string",
            "enum": ["1", "2", "3", "6", "7", "8"],
            "description": "Incident state"
          },
          "priority": {
            "type": "string",
            "enum": ["1", "2", "3", "4", "5"],
            "description": "Priority level"
          },
          "assignment_group": {
            "type": "string",
            "description": "Assignment group"
          },
          "assigned_to": {
            "type": "string",
            "description": "Assigned user"
          },
          "work_notes": {
            "type": "string",
            "description": "Work notes"
          },
          "close_code": {
            "type": "string",
            "description": "Close code"
          },
          "close_notes": {
            "type": "string",
            "description": "Close notes"
          }
        },
        "required": ["sys_id"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_change_request",
      "name": "Create Change Request",
      "description": "Create a new change request",
      "parameters": {
        "type": "object",
        "properties": {
          "short_description": {
            "type": "string",
            "description": "Short description"
          },
          "description": {
            "type": "string",
            "description": "Detailed description"
          },
          "type": {
            "type": "string",
            "enum": ["standard", "normal", "emergency"],
            "description": "Change type"
          },
          "priority": {
            "type": "string",
            "enum": ["1", "2", "3", "4"],
            "description": "Priority level"
          },
          "risk": {
            "type": "string",
            "enum": ["1", "2", "3", "4"],
            "description": "Risk level"
          },
          "impact": {
            "type": "string",
            "enum": ["1", "2", "3"],
            "description": "Impact level"
          },
          "requested_by": {
            "type": "string",
            "description": "Requested by user"
          },
          "assignment_group": {
            "type": "string",
            "description": "Assignment group"
          },
          "assigned_to": {
            "type": "string",
            "description": "Assigned user"
          },
          "start_date": {
            "type": "string",
            "format": "date-time",
            "description": "Planned start date"
          },
          "end_date": {
            "type": "string",
            "format": "date-time",
            "description": "Planned end date"
          },
          "implementation_plan": {
            "type": "string",
            "description": "Implementation plan"
          },
          "backout_plan": {
            "type": "string",
            "description": "Backout plan"
          },
          "test_plan": {
            "type": "string",
            "description": "Test plan"
          }
        },
        "required": ["short_description"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_users",
      "name": "Get Users",
      "description": "Get list of users",
      "parameters": {
        "type": "object",
        "properties": {
          "sysparm_query": {
            "type": "string",
            "description": "Query filter"
          },
          "sysparm_limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 10000,
            "default": 100,
            "description": "Maximum number of records"
          },
          "sysparm_fields": {
            "type": "string",
            "description": "Comma-separated list of fields to return"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "incident_created",
      "name": "Incident Created",
      "description": "Triggered when a new incident is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "assignment_group": {
            "type": "string",
            "description": "Filter by assignment group"
          },
          "priority": {
            "type": "string",
            "description": "Filter by priority"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "sys_id": {"type": "string"},
          "number": {"type": "string"},
          "short_description": {"type": "string"},
          "state": {"type": "string"},
          "priority": {"type": "string"},
          "urgency": {"type": "string"},
          "impact": {"type": "string"},
          "caller_id": {"type": "string"},
          "assignment_group": {"type": "string"},
          "assigned_to": {"type": "string"},
          "opened_at": {"type": "string"}
        }
      }
    },
    {
      "id": "incident_updated",
      "name": "Incident Updated",
      "description": "Triggered when an incident is updated",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "assignment_group": {
            "type": "string",
            "description": "Filter by assignment group"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "sys_id": {"type": "string"},
          "number": {"type": "string"},
          "short_description": {"type": "string"},
          "state": {"type": "string"},
          "priority": {"type": "string"},
          "assignment_group": {"type": "string"},
          "assigned_to": {"type": "string"},
          "updated_on": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/table/incident?sysparm_limit=1"
  }
}